<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#DBDADB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:text="0"
                    android:textColor="#35283C"
                    android:textSize="50sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/oneButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="1"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/twoButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="2"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/threeButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="3"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/sumButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#35283C"
                    android:onClick="operatorEvent"
                    android:text="+"
                    android:textColor="#DBDADB" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/fourButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="4"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/fiveButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="5"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/sixButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="6"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/subButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#35283C"
                    android:onClick="operatorEvent"
                    android:text="-"
                    android:textColor="#DBDADB" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/sevenButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="7"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/eightButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="8"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/nineButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="9"
                    android:textColor="#35283C" />

                <Button
                    android:id="@+id/mulButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#35283C"
                    android:onClick="operatorEvent"
                    android:text="*"
                    android:textColor="#DBDADB" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/zeroButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#DBDADB"
                    android:onClick="onClickNumber"
                    android:text="0"
                    android:textColor="#35283C" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#35283C"
                    android:onClick="ResetButton"
                    android:text="Clear"
                    android:textColor="#DBDADB" />

                <Button
                    android:id="@+id/divButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#35283C"
                    android:onClick="operatorEvent"
                    android:text="/"
                    android:textColor="#DBDADB" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/eqlButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1pt"
                    android:layout_weight="1"
                    android:background="#35283C"
                    android:onClick="eqlEvent"
                    android:text="="
                    android:textColor="#DBDADB" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>